{
  "name": "serverless-boilerplate",
  "description": "This template demonstrates how to make a simple HTTP API with Node.js and Typescript running on AWS Lambda and API Gateway using the Serverless Framework v3",
  "version": "1.1.0",
  "main": "handler.ts",
  "license": "MIT",
  "scripts": {
    "start": "yarn sls offline --reloadHandler --stage local",
    "prepare": "husky install",
    "format": "prettier ./src --write",
    "format:tests": "prettier ./__tests__ --write",
    "type-check": "tsc --noEmit",
    "lint": "eslint ./src --fix --cache",
    "test": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "lint:tests": "eslint ./__tests__ --fix --cache",
    "test:coverage": "yarn jest --coverage",
    "test:unit": "jest --projects ./jest.unit.config.ts",
    "test:integration": "jest --projects ./jest.integration.config.ts",
    "test:e2e": "jest --projects ./jest.e2e.config.ts",
    "deploy:local": "yarn sls deploy --stage local",
    "sls": "serverless",
    "localstack:start": "localstack start"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@serverless/typescript": "^3.38.0",
    "@types/aws-lambda": "^8.10.138",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.48.2",
    "aws-sdk-client-mock": "^4.0.1",
    "esbuild": "^0.21.4",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "semantic-release": "^21.0.1",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.52.1",
    "serverless-localstack": "^1.2.0",
    "serverless-offline": "^13.6.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.254.0",
    "@aws-sdk/client-eventbridge": "^3.254.0",
    "@aws-sdk/lib-dynamodb": "^3.592.0",
    "@aws-sdk/util-dynamodb": "^3.254.0",
    "@middy/core": "4",
    "@middy/event-normalizer": "^4.4.0",
    "@middy/http-cors": "^5.4.2",
    "@middy/http-error-handler": "^4.4.0",
    "@middy/http-header-normalizer": "^4.4.0",
    "@middy/http-json-body-parser": "^4.4.0",
    "@middy/http-security-headers": "^4.4.0",
    "@middy/validator": "^4.4.0",
    "ajv": "^8.12.0",
    "http-errors": "^2.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
